<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">
  <link rel="stylesheet" href="/assets/styles.css">
</head>
<body>
  <header>
    <p>
      <a href="/">Home</a>
    </p>
  </header>
  <h1>{{ title }}</h1>
  <p>{{ description }}</p>

  {{{ contents }}}

{{#each collections }}
<h2 class="u-capitalise">{{ @key }}</h2>
  {{#each this }}
    <li><a href="{{ this.path }}">{{ this.title }}</a></li>
  {{/each}}
{{/each}}

  <footer>
    <p>Built with <a href="http://www.metalsmith.io/">Metalsmith</a>, deployed by <a href="https://www.netlify.com/">Netlify</a></p>
  </footer>

</body>
</html>
