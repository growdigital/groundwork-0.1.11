<!doctype html>
<html lang="en-gb" dir="ltr">
{{> head}}
<body class="{{ pageClass }}">

  {{> header}}
  <main class="main" role="main">

    {{{ contents }}}

    {{#each collections }}
    <h2>Posts</h2>
      <ol>
      {{#each this }}
        <li><a href="/{{ this.path }}">{{ this.title }}</a></li>
      {{/each}}
      </ol>
    {{/each}}

  </main>

  {{> aside}}

{{> footer}}

</body>
</html>
