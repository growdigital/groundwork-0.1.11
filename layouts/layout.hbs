<!doctype html>
<html lang="en">
{{> head}}
<body class="{{ name }}">

  {{> header}}
  <main role="main">

    {{{ contents }}}

    {{#each collections }}
    <h2>Posts</h2>
      <ol>
      {{#each this }}
        <li><a href="/{{ this.path }}">{{ this.title }}</a></li>
      {{/each}}
      </ol>
    {{/each}}

  </main>

  {{> aside}}

{{> footer}}

</body>
</html>
